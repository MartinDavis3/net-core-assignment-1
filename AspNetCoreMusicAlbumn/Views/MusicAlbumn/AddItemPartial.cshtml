@model MusicAlbumnItem
    <form asp-action="AddItem" method="POST">
        <p>Add a new item:</p>
        <label asp-for="Title">Title</label>
        <input asp-for="Title">
        <label asp-for="Artist">Artist</label>
        <input asp-for="Artist">
        <label asp-for="Year">Year</label>
        <input asp-for="Year">
        <label asp-for="NumberOfTracks">#Tracks</label>
        <input asp-for="NumberOfTracks">
        <label asp-for="Genre">Genre</label>
        <input asp-for="Genre">
        <button type="submit">Add</button>
    </form>

