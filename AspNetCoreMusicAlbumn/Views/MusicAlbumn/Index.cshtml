@model MusicAlbumnViewModel
@{
    ViewData["Title"] = "Music Albumns in Collection";
}
<div class="panel panel-default music-collection-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Title</td>
                <td>Artist</td>
                <td>Year</td>
                <td>#Tracks</td>
                <td>Genre</td>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Artist</td>
                <td>@item.Year</td>
                <td>@item.NumberOfTracks</td>
                <td>@item.Genre</td>
            </tr>
        }
    </table>
    <div class="panel-footer add-item-form">
        @await Html.PartialAsync("AddItemPartial", new MusicAlbumnItem())
    </div>
</div>